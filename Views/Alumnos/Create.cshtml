@model presonasimagen.Models.AlumnosModel

@{
    ViewData["Title"] = "Crear alumno";
}
<a asp-action="Index" class="nav-link"><i class="fas fa-arrow-left"></i> Volver</a>
<h4>Crear nuevo alumno</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="POST" enctype="multipart/form-data" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
                </div>
                <div class="col-md-6">
            <div class="form-group">
                <label asp-for="IdLocalidad" class="control-label"></label>
                <select asp-for="IdLocalidad" class ="form-control" asp-items="ViewBag.IdLocalidad">
                    <option value="">--SELECCIONAR OPCIÓN--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdEstudio" class="control-label"></label>
                <select asp-for="IdEstudio" class ="form-control" asp-items="ViewBag.IdEstudio">
                    <option value="">--SELECCIONAR OPCIÓN--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdTitulo" class="control-label"></label>
                <select asp-for="IdTitulo" class ="form-control" asp-items="ViewBag.IdTitulo">
                    <option value="">--SELECCIONAR OPCIÓN--</option>
                </select>
            </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <br>
                <input asp-for="ImageFile" accept="image/*" class="btn btn-primary btn-sm"/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear alumnos" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
