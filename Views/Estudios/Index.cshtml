@model IEnumerable<presonasimagen.Models.EstudiosModel>

@{
    ViewData["Title"] = "Categorias Estudios";
}

<h5><i class="fas fa-book"></i> Categoria de estudios</h5>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudios)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Nueva Categoria</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Estudios)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil-alt text-warning"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash text-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
