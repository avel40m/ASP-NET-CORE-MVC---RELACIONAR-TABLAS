@model presonasimagen.Models.LocalidadModel

@{
    ViewData["Title"] = "Crear localidad";
}

<a asp-action="Index" class="nav-link"><i class="fas fa-arrow-left"></i> Volver</a>

<h4>Crear localidad</h4>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8">
                    <input asp-for="Localidad" class="form-control" placeholder="Nombre de localidad" />
                    <span asp-validation-for="Localidad" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Crear Localidad" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
